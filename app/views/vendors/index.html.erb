<h1> Vendors And Their Suyas</h1>

<div class="vendors">
  <% @vendors.each do |vendor| %>
    <div class="vendor">
      <%= vendor.name %>
      <% vendor.suyas.each do |suya| %>
        <li class="suyas"> I sell <%= suya.meat %> which costs <%= suya.price %>. Spicy: <%= suya.spicy %> %></li>
      <% end %>
    </div>
  <% end %>
</div>
